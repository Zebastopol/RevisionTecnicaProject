<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtRegistro_de_revision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/background_dark"
            android:text="Registro de Revision "
            android:textAlignment="center"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:onClick="guardar"
                android:text="Guardar Datos" />

            <Button
                android:id="@+id/btnFotografia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"

                android:layout_marginEnd="20dp"
                android:text="Activar Camara " />

            <Button
                android:id="@+id/btnVerFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Ver Fotos" />

            <Button
                android:id="@+id/btnGuardarFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:text="Guardar Foto " />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="288dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:textAlignment="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete el Formulario"
                    android:textColor="@color/design_default_color_secondary_variant"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/txtCodigoIngreso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Código de Registro"
                    android:inputType="textPersonName"
                    android:minHeight="30dp" />

                <EditText
                    android:id="@+id/txtFechaHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Fecha y hora ingreso"
                    android:inputType="textPersonName"
                    android:minHeight="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtDocumentos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Documentos"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnDocus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnDocus2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtPatente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:ems="10"
                            android:hint="Patente"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnPatente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnPatente2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtSistema"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:ems="10"
                            android:hint="Sistema De Direccion"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnSistem"
                            android:layout_width="71dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnSistem2"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtFrenos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Frenos"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnFrenos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnFrenos2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="No" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtNeumaticos_y_llantas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Neumaticos y llantas"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnNeuma"
                            android:layout_width="112dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rbdbtnNeuma2"
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtSuspencion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Supencion"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnSusp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnSuspNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="No" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtAlineacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Alineacion"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnAlineaSí"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnAlineaNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtKit_De_Seguridad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Kit de Seguridad"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnKitSi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnKitNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtCinturones_De_Seguridad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Cinturones Seguridad"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnCinturonSi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnCinturonNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtLuces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Luces"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnLucesSi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rbdtnLucesNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtPuertas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Puertas"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnPuertaSi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnPuertaNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtVidrios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Vidrios"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnVidrioSi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnVidrioNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtTubo_De_Escape"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Tubo de Escape"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnTuboSi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnTuboNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtGases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Gases"
                            android:inputType="textPersonName"
                            android:minHeight="30dp" />

                        <RadioButton
                            android:id="@+id/rdbtnGasSI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rdbtnGasNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <EditText
                        android:id="@+id/txtObservaciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Observaciones"
                        android:inputType="textMultiLine"
                        android:minHeight="30dp" />

                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>